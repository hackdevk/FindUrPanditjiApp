<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/popupBGColor">

        <ImageView
            android:id="@+id/pandits_popup_window_layout_iv_pandit"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/pandits_popup_window_layout_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_window_24_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/pandits_popup_window_layout_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="7dp"
            android:textColor="@color/blackColor"
            android:layout_centerInParent="true"
            android:layout_below="@id/pandits_popup_window_layout_iv_pandit" />

        <TextView
            android:id="@+id/pandits_popup_window_layout_tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/blackColor"
            android:layout_centerInParent="true"
            android:layout_below="@id/pandits_popup_window_layout_tv_name" />
        <TextView
            android:id="@+id/pandits_popup_window_layout_tv_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/blackColor"
            android:layout_centerInParent="true"
            android:layout_below="@id/pandits_popup_window_layout_tv_email" />
        <TextView
            android:id="@+id/pandits_popup_window_layout_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/blackColor"
            android:layout_centerInParent="true"
            android:layout_below="@id/pandits_popup_window_layout_tv_contact_no" />

        <Button
            android:id="@+id/pandits_popup_window_layout_btn_book"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Book"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="17dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/pandits_popup_window_layout_tv_address" />


        <!--        <Button-->
        <!--            android:id="@+id/bookMovie"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/movieImage"-->
        <!--            android:layout_alignBottom="@+id/movieLanguage"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:background="@color/colorPrimary"-->
        <!--            android:text="book"-->
        <!--            android:textColor="@color/colorWhite" />-->


    </RelativeLayout>
</androidx.cardview.widget.CardView>