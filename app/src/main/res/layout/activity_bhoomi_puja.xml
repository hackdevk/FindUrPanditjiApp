<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pujas.BhoomiPuja"
    android:layout_margin="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bhoomi Puja"
        android:typeface="serif"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/bhoomi_puja_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bhoomi_puja_text"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/bhoomi_puja_label"
        app:layout_constraintLeft_toLeftOf="@id/bhoomi_puja_label" />

</androidx.constraintlayout.widget.ConstraintLayout>