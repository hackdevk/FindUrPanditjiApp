<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:paddingBottom="17dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_tv_label"
            android:text="Login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

<!--        for the selection of the user whether he/she is a pandit ji or jajman ji-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:id="@+id/activity_login_rg_category"
            app:layout_constraintTop_toBottomOf="@id/activity_login_tv_label"
            app:layout_constraintLeft_toLeftOf="@id/activity_login_tv_label" >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jajman Ji"
                android:id="@+id/activity_login_rb_jajman" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pandit Ji"
                android:layout_marginLeft="12dp"
                android:id="@+id/activity_login_rb_pandit" />
        </RadioGroup>

        <!--    for the username field-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_tv_username"
            android:text="Email or username:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/activity_login_rg_category"
            app:layout_constraintLeft_toLeftOf="parent" />
        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_et_email"
            app:layout_constraintTop_toBottomOf="@id/activity_login_tv_username"
            app:layout_constraintLeft_toLeftOf="parent" />

        <!--    for the password field-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_tv_password"
            android:text="Password:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/activity_login_et_email"
            app:layout_constraintLeft_toLeftOf="parent" />
        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_et_password"
            app:layout_constraintTop_toBottomOf="@id/activity_login_tv_password"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_btn_loginBtn"
            android:text="Login"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/activity_login_et_password"
            app:layout_constraintLeft_toLeftOf="parent" />
        <!--    the text view in which we will set the clickable text-->
        <TextView
            android:id="@+id/activity_login_tv_signup_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/activity_login_btn_loginBtn"
            app:layout_constraintLeft_toLeftOf="@id/activity_login_btn_loginBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>