<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="100dp"
    tools:context=".FillUserProfileActivity">

<!--    for the uploading of image-->
    <ImageView
        android:id="@+id/user_profile_layout_iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/profileBackgroundColor"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/pandit_profile_image"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/user_profile_layout_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_iv_profile" />

    <TextView
        android:id="@+id/user_profile_layout_tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_name" />

    <TextView
        android:id="@+id/user_profile_layout_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_username" />
    <TextView
        android:id="@+id/user_profile_layout_tv_date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_email" />
    <TextView
        android:id="@+id/user_profile_layout_tv_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_date_of_birth" />
    <TextView
        android:id="@+id/user_profile_layout_tv_contact_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_gender" />
    <TextView
        android:id="@+id/user_profile_layout_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_layout_tv_contact_no" />


</androidx.constraintlayout.widget.ConstraintLayout>